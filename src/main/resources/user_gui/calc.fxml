<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<?import javafx.scene.layout.StackPane?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="user_gui_controller.calc_controller">

    <children>

        <!-- Background & Logo -->
        <ScrollPane layoutX="165.0" layoutY="74.0" prefHeight="497.0" prefWidth="793.0">
            <content>
                <AnchorPane prefHeight="571.0" prefWidth="959.0" style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #002b36, #014d4a, #00ffcc);" />
            </content>
        </ScrollPane>

        <ImageView fitHeight="545.0" fitWidth="516.0" layoutX="222.0" layoutY="30.0" opacity="0.18" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../icons/logo.png" />
            </image>
        </ImageView>

        <!-- Top StackPane containing top bar and centered logo -->
        <StackPane AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <!-- Top Bar -->
                <AnchorPane fx:id="topBar" prefHeight="74.0"
                            style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #001f3f, #003b46);">
                    <children>
                        <!-- Menu Button -->
                        <Button fx:id="menu_btn" layoutX="14.0" layoutY="24.0" mnemonicParsing="false" onAction="#toggle_menu"
                                prefHeight="30.0" prefWidth="30.0"
                                style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #ffffff, #e0f7fa);">
                            <graphic>
                                <ImageView fitHeight="26.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../icons/menu.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>

                        <!-- Account Button (Right) -->
                        <Button fx:id="account_btn" layoutY="25.0" mnemonicParsing="false" onAction="#acount_page"
                                prefHeight="29.0" prefWidth="200.0"
                                style="-fx-background-color: transparent; -fx-alignment: CENTER_RIGHT;"
                                text="mohammed" textFill="WHITE" AnchorPane.rightAnchor="10.0">
                            <graphic>
                                <ImageView fitHeight="21.0" fitWidth="21.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../icons/account.png"/>
                                    </image>
                                    <effect>
                                        <Glow/>
                                    </effect>
                                </ImageView>
                            </graphic>
                        </Button>
                    </children>
                </AnchorPane>

                <!-- Centered Logo -->
                <ImageView fx:id="logoImage" fitHeight="50.0" fitWidth="50.0" preserveRatio="true">
                    <image>
                        <Image url="@../icons/logo.png"/>
                    </image>
                </ImageView>
            </children>
        </StackPane>

        <!-- Sidebar -->
        <Pane layoutY="74.0" prefHeight="495.0" prefWidth="166.0" style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #002b36, #014d4a, #00ffcc);">
            <children>
                <Button graphicTextGap="10.0" mnemonicParsing="false" onAction="#home_page_user" prefHeight="51.0" prefWidth="166.0" style="-fx-background-color: transparent; -fx-alignment: CENTER_LEFT;" text="Home" textFill="WHITE">
                    <graphic>
                        <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/home.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button graphicTextGap="10.0" layoutY="51.0" mnemonicParsing="false" onAction="#shop_page" prefHeight="51.0" prefWidth="166.0" style="-fx-background-color: transparent; -fx-alignment: CENTER_LEFT;" text="Shop" textFill="WHITE">
                    <graphic>
                        <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/you.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button graphicTextGap="10.0" layoutY="102.0" mnemonicParsing="false" onAction="#pills_page_user" prefHeight="51.0" prefWidth="166.0" style="-fx-background-color: transparent; -fx-alignment: CENTER_LEFT;" text="Pills" textFill="WHITE">
                    <graphic>
                        <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/you.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button graphicTextGap="10.0" layoutY="342.0" mnemonicParsing="false" onAction="#cart_page" prefHeight="51.0" prefWidth="166.0" style="-fx-background-color: transparent; -fx-alignment: CENTER_LEFT;" text="Your Cart" textFill="WHITE">
                    <graphic>
                        <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/cart.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button graphicTextGap="10.0" layoutY="393.0" mnemonicParsing="false" onAction="#calculator_page" prefHeight="51.0" prefWidth="166.0" style="-fx-background-color: transparent; -fx-alignment: CENTER_LEFT;" text="Calculator" textFill="WHITE">
                    <graphic>
                        <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/cart.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button graphicTextGap="10.0" layoutY="444.0" mnemonicParsing="false" onAction="#login_page" prefHeight="51.0" prefWidth="166.0" style="-fx-background-color: transparent; -fx-alignment: CENTER_LEFT;" text="Log Out" textFill="WHITE">
                    <graphic>
                        <ImageView fitHeight="30.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/logout.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </Pane>

        <!-- Calculator Section -->
        <ComboBox fx:id="band_num" layoutX="202.0" layoutY="99.0" promptText="NO. OF BANDS" />

        <HBox layoutX="158.0" layoutY="132.0" prefHeight="350.0" prefWidth="785.0">
            <children>
                <!-- Four Band Pane -->
                <Pane fx:id="fourbandpane" prefHeight="200.0" prefWidth="200.0" visible="false">
                    <children>
                        <ComboBox fx:id="band1_4" layoutX="17.0" layoutY="24.0" prefWidth="150.0" promptText="Band 1" />
                        <ComboBox fx:id="band2_4" layoutX="17.0" layoutY="75.0" prefWidth="150.0" promptText="Band 2" />
                        <ComboBox fx:id="multiplier_4" layoutX="17.0" layoutY="126.0" prefWidth="150.0" promptText="Multiplier" />
                        <ComboBox fx:id="tolerance_4" layoutX="20.0" layoutY="177.0" prefWidth="150.0" promptText="Tolerance" />
                    </children>
                </Pane>

                <!-- Five Band Pane -->
                <Pane fx:id="fivebandpane" prefHeight="200.0" prefWidth="200.0" visible="false">
                    <children>
                        <ComboBox fx:id="band1_5" layoutX="18.0" layoutY="23.0" prefWidth="150.0" promptText="Band 1" />
                        <ComboBox fx:id="band2_5" layoutX="17.0" layoutY="71.0" prefWidth="150.0" promptText="Band 2" />
                        <ComboBox fx:id="band3_5" layoutX="18.0" layoutY="125.0" prefWidth="150.0" promptText="Band 3" />
                        <ComboBox fx:id="multiplier_5" layoutX="19.0" layoutY="177.0" prefWidth="150.0" promptText="Multiplier" />
                        <ComboBox fx:id="tolerance_5" layoutX="19.0" layoutY="226.0" prefWidth="150.0" promptText="Tolerance" />
                    </children>
                </Pane>

                <!-- Six Band Pane -->
                <Pane fx:id="sixbandpane" prefHeight="426.0" prefWidth="224.0" visible="false">
                    <children>
                        <ComboBox fx:id="band1_6" layoutX="18.0" layoutY="23.0" prefWidth="150.0" promptText="Band 1" />
                        <ComboBox fx:id="band2_6" layoutX="17.0" layoutY="71.0" prefWidth="150.0" promptText="Band 2" />
                        <ComboBox fx:id="band3_6" layoutX="18.0" layoutY="125.0" prefWidth="150.0" promptText="Band 3" />
                        <ComboBox fx:id="multiplier_6" layoutX="19.0" layoutY="177.0" prefWidth="150.0" promptText="Multiplier" />
                        <ComboBox fx:id="tolerance_6" layoutX="19.0" layoutY="226.0" prefWidth="150.0" promptText="Tolerance" />
                        <ComboBox fx:id="tempco_6" layoutX="19.0" layoutY="274.0" prefWidth="150.0" promptText="Temp Coefficient" />
                    </children>
                </Pane>
            </children>
        </HBox>

        <Button fx:id="calc_btn" layoutX="184.0" layoutY="498.0" onAction="#claculate_act" prefHeight="45.0" prefWidth="214.0" text="Calculate" />
        <Label fx:id="result" layoutX="486.0" layoutY="492.0" prefHeight="55.0" prefWidth="392.0" style="-fx-border-color: cyan; -fx-text-fill: white; -fx-alignment: center;" text="Label" />

    </children>
</AnchorPane>
